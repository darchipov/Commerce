<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
        xmlns="http://symfony.com/schema/dic/constraint-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Component\Commerce\Subject\Model\SubjectRelativeInterface">
        <getter property="subjectIdentity">
            <constraint name="NotNull"/>
            <constraint name="Valid"/>
        </getter>
    </class>

    <class name="Ekyna\Component\Commerce\Subject\Entity\SubjectIdentity">
        <constraint name="Ekyna\Component\Commerce\Bridge\Symfony\Validator\Constraints\SubjectIdentity"/>
    </class>

</constraint-mapping>
