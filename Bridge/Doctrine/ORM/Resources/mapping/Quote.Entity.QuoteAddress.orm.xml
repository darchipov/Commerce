<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Quote\Entity\QuoteAddress"
            table="commerce_quote_address">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <one-to-one target-entity="Ekyna\Component\Commerce\Quote\Model\QuoteInterface"
                    field="invoiceQuote" mapped-by="invoiceAddress">
            <join-column name="invoice_quote_id" referenced-column-name="id" nullable="true" on-delete="CASCADE"/>
        </one-to-one>

        <one-to-one target-entity="Ekyna\Component\Commerce\Quote\Model\QuoteInterface"
                    field="deliveryQuote" mapped-by="deliveryAddress">
            <join-column name="delivery_quote_id" referenced-column-name="id" nullable="true" on-delete="CASCADE"/>
        </one-to-one>

    </mapped-superclass>

</doctrine-mapping>
