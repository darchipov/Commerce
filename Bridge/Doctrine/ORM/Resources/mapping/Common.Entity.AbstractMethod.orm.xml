<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="Ekyna\Component\Commerce\Common\Entity\AbstractMethod">

        <field name="name" column="name" type="string" length="64"/>
        <field name="enabled" column="enabled" type="boolean"/>
        <field name="available" column="available" type="boolean"/>
        <field name="position" column="position" type="smallint">
            <gedmo:sortable-position/>
        </field>

    </mapped-superclass>

</doctrine-mapping>
