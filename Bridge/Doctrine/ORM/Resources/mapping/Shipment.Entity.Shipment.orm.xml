<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Shipment\Entity\Shipment"
            table="commerce_shipment">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="number" column="number" type="string" length="16"/>
        <field name="state" column="state" type="string" length="16"/>

        <field name="createdAt" column="created_at" type="datetime" />
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true" />
        <field name="completedAt" column="completed_at" type="datetime" nullable="true" />

        <one-to-many target-entity="Ekyna\Component\Commerce\Shipment\Model\ShipmentItemInterface" field="items" mapped-by="shipment" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <!-- TODO <one-to-many target-entity="Ekyna\Component\Commerce\Shipment\Model\ReturnInterface" mapped-by="shipment" field="returns" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>-->

        <many-to-one target-entity="Ekyna\Component\Commerce\Order\Model\OrderInterface" field="order" inversed-by="shipments">
            <join-column name="order_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <many-to-one target-entity="Ekyna\Component\Commerce\Shipment\Model\ShipmentMethodInterface" field="method">
            <join-column name="method_id" referenced-column-name="id" on-delete="RESTRICT" />
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
