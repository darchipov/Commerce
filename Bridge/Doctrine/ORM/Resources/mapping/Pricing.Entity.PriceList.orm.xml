<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Ekyna\Component\Commerce\Pricing\Entity\PriceList"
            table="commerce_price_list">

        <indexes>
            <index columns="name" name="idx_name"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="name" name="unique_price_list_name"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" column="name" type="string" length="64"/>

        <many-to-many target-entity="Ekyna\Component\Commerce\Customer\Entity\CustomerGroup" field="customerGroups">
            <join-table name="commerce_price_list_customer_group">
                <join-columns>
                    <join-column name="price_list_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="customer_group_id" referenced-column-name="id" on-delete="RESTRICT"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many target-entity="Ekyna\Component\Commerce\Customer\Model\CustomerInterface" field="customers">
            <join-table name="commerce_price_list_customer">
                <join-columns>
                    <join-column name="price_list_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="customer_id" referenced-column-name="id" on-delete="RESTRICT"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>

</doctrine-mapping>
