<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Order\Entity\Order"
            table="commerce_order">

        <indexes>
            <index columns="number" name="idx_order_number" />
            <index columns="secret" name="idx_order_secret" />
        </indexes>

        <unique-constraints>
            <unique-constraint columns="number" name="unique_number" />
            <unique-constraint columns="secret" name="unique_secret" />
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="key" column="secret" type="string" length="32" />
        <field name="number" column="number" type="string" length="16" />
        <field name="company" column="company" type="string" length="64" nullable="true"/>
        <field name="firstName" column="first_name" type="string" length="64"/>
        <field name="lastName" column="last_name" type="string" length="64"/>
        <field name="email" column="email" type="string" length="255"/>
        <field name="sameAddress" column="same_address" type="boolean" />

        <field name="state" column="state" type="string" length="16"/>
        <field name="paymentState" column="payment_state" type="string" length="16"/>
        <field name="shipmentState" column="shipment_state" type="string" length="16"/>

        <field name="weightTotal" column="weight_total" type="integer"/>
        <field name="netTotal" column="net_total" type="decimal" precision="12" scale="5"/>
        <field name="taxTotal" column="tax_total" type="decimal" precision="10" scale="5"/>
        <field name="adjustmentTotal" column="adjustment_total" type="decimal" precision="10" scale="5"/>
        <field name="grandTotal" column="grand_total" type="decimal" precision="12" scale="5"/>
        <field name="paidTotal" column="paid_total" type="decimal" precision="12" scale="5"/>

        <field name="createdAt" column="created_at" type="datetime" />
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true" />
        <field name="completedAt" column="completed_at" type="datetime" nullable="true" />

        <one-to-one target-entity="Ekyna\Component\Commerce\Order\Model\OrderAddressInterface" field="invoiceAddress">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-column name="invoice_address_id" referenced-column-name="id" on-delete="RESTRICT" nullable="false" />
        </one-to-one>

        <one-to-one target-entity="Ekyna\Component\Commerce\Order\Model\OrderAddressInterface" field="deliveryAddress">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <join-column name="delivery_address_id" referenced-column-name="id" on-delete="SET NULL" nullable="true" />
        </one-to-one>

        <one-to-many target-entity="Ekyna\Component\Commerce\Order\Entity\OrderItem" field="items" mapped-by="order" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Order\Entity\OrderAdjustment" field="adjustments" mapped-by="order" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Payment\Model\PaymentInterface" field="payments" mapped-by="order" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Shipment\Model\ShipmentInterface" field="shipments" mapped-by="order" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="Ekyna\Component\Commerce\Customer\Model\CustomerInterface" field="customer">
            <join-column name="customer_id" referenced-column-name="id" on-delete="SET NULL" nullable="true" />
        </many-to-one>

        <many-to-one target-entity="Ekyna\Component\Commerce\Pricing\Entity\Currency" field="currency">
            <join-column name="currency_id" referenced-column-name="id" on-delete="RESTRICT" nullable="false" />
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
