<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Subject\Entity\AbstractSubject"
            table="commerce_subject">

        <indexes>
            <index columns="reference" name="idx_reference"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="reference" name="unique_subject_reference"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="designation" column="designation" type="string" length="255"/>
        <field name="reference" column="reference" type="string" length="16"/>

        <one-to-many target-entity="Ekyna\Component\Commerce\Subject\Entity\Offer" field="offers"
                     mapped-by="subject" fetch="EXTRA_LAZY" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="Ekyna\Component\Commerce\Pricing\Entity\TaxGroup" field="taxGroup">
            <join-column name="tax_group_id" referenced-column-name="id" on-delete="RESTRICT" nullable="false"/>
        </many-to-one>

    </mapped-superclass>

</doctrine-mapping>
