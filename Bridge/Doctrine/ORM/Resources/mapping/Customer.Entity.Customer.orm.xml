<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Component\Commerce\Customer\Entity\Customer"
            table="commerce_customer">

        <!--<entity-listeners>
            <entity-listener class="Ekyna\Component\Commerce\Bridge\Doctrine\ORM\Listener\CustomerListener"/>
        </entity-listeners>-->

        <indexes>
            <index columns="email" name="idx_customer_email"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="email" name="unique_customer_email"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="email" column="email" type="string" length="255" unique="true"/>
        <field name="company" column="company" type="string" length="64" nullable="true"/>
        <field name="firstName" column="first_name" type="string" length="64"/>
        <field name="lastName" column="last_name" type="string" length="64"/>
        <field name="phone" column="phone" type="string" length="16" nullable="true"/>
        <field name="mobile" column="mobile" type="string" length="16" nullable="true"/>

        <field name="createdAt" column="created_at" type="datetime" />
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true" />

        <one-to-many target-entity="Ekyna\Component\Commerce\Customer\Model\CustomerInterface"
                     mapped-by="parent" field="children" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="Ekyna\Component\Commerce\Customer\Model\CustomerAddressInterface"
                     mapped-by="customer" field="addresses" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="Ekyna\Component\Commerce\Customer\Model\CustomerInterface"
                     inversed-by="children" field="parent">
            <join-column name="parent_id" referenced-column-name="id" nullable="true" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-many target-entity="Ekyna\Component\Commerce\Customer\Entity\CustomerGroup" field="customerGroups">
            <join-table name="commerce_customer_customer_groups">
                <join-columns>
                    <join-column name="customer_id" referenced-column-name="id" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="group_id" referenced-column-name="id" on-delete="RESTRICT"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </mapped-superclass>

</doctrine-mapping>
